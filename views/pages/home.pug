extends ../base.pug

include ../mixins/sections/home-header

block variables
    - var metaPageName = homePage.pageName
    - var pageName = 'home'
    - var pageComponent = 'Home'
    - var pageShade = 'dark'
    - var renderer = 'home'

block page

    +home-header(homePage.baseline, homePage.bubbleImages)

    section.ui-container.page-home-works
        each work, index in homePage.works
            include ../components/work

    section.page-home-projectsButton
        +circled-button('/projects', 'Tous les projets')

    include ../components/footer
