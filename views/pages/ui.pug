            +work-card('Work Card', 'Work excerpt description', '2022', '#', 'https://source.unsplash.com/random/', 'work cover image', 0.24)
            +work-card('Work Card', 'Work excerpt description', '2022', '#', 'https://source.unsplash.com/random/', 'work cover image', 0)

    section.page-ui-section
        h2.page-ui-sectionTitle Cursor
        .page-ui-cursor
            .page-ui-cursorLink(data-ref="cursorLink[]" data-cursor-sticky data-cursor-color="brown")
            .page-ui-cursorLink(data-ref="cursorLink[]" data-cursor-color="white")
            .page-ui-cursorSlider(data-ref="cursorSlider[]")

    section.page-ui-section
        h2.page-ui-sectionTitle Links
        .page-ui-textLinks
            +scribble-link('/projects', 'Scribble Link')(class='ui-p-m')
            a(href="#").ui-p-m.ui-spotLink Spot Link
            a(href="#").ui-p-m.ui-underlineLink Underline Link
            a(href="#" data-ref="cursorLink[]" data-cursor-sticky data-cursor-sticky-side="right").ui-p-m.ui-cursorTextLink Cursor Sticky Link Right
            +circled-button('#', 'Circled Button')
