mixin vertical-text-image(title, image)
    section.section-verticalTextImage
        .ui-container.section-verticalTextImage-container
            header.section-verticalTextImage-header
                h2.ui-h3.section-verticalTextImage-title(data-component='Title' data-option-auto='true')!=title
            .section-verticalTextImage-image(data-component='Image' data-option-clip-path='inset(0% 0% 100% 0%)')
                +parallax(image.url, image.description, 12, false)
