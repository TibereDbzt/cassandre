mixin horizontal-text-image(title, text, image, reverse)
    section.section-horizontalTextImage(data-component='HorizontalTextImage' data-option-parallax-amount='120' class=reverse ? 'is-reverse' : '')
        .ui-container.section-horizontalTextImage-container
            .section-horizontalTextImage-text(data-ref='text')
                h2.ui-h3.section-horizontalTextImage-title!=title
                p.section-horizontalTextImage-wysiwyg!=text
            .section-horizontalTextImage-image(data-ref='image')
                +parallax(image.url, image.description, 12, false)
